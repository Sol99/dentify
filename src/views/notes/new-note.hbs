<div class="col-md-4 mx-auto">
    <div style="background-color: white;">
    <div class="card-header">
        <h3>Nueva Nota</h3>
    </div>
    <div class="card-body">
        <form action="/notes/new-note" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Ingresa el titulo">
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control"
                placeholder="Ingrese la descripcion..." style="margin-top: 3%;"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit" style="margin-top: 3%;">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>